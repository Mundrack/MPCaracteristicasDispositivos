<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MPCaracteristicasDispositivos.MainPage">

    <ScrollView>
        <VerticalStackLayout>

            <Button Text="Info" Clicked="GetDeviceInfo" />
            <Label x:Name="InfoDevice" />

            <Button Text="Vibrar" Clicked="OnVibrateClicked" />

            <Button Text="Bateria" Clicked="GetBateriInfo" />
            <Label x:Name="InfoBatery"/>

            <Button Text="Tomar Foto" Clicked="GetPhoto" />
            <Image x:Name="PhotoImage"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
